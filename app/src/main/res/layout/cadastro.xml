<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutCEP"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutEndereco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutDataDeNascimento">

        <EditText
            android:id="@+id/cep"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="01234-567"
            android:inputType="textPersonName"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="342dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutPassword"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutCPF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutEmail"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/password"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="130dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutEmail"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutNomeUsuario">

        <EditText
            android:id="@+id/email"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="77dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutCPF"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutTelefone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutPassword">

        <EditText
            android:id="@+id/cpf"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="123.456.789-01"
            android:inputType="number"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="178dp" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/addFirebase"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:text="Finalizar Cadastro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutEndereco"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutNomeUsuario"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nomeUsuario"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="26dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutTelefone"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutDataDeNascimento"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutCPF">

        <EditText
            android:id="@+id/telefone"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="(12) 91234-5678"
            android:inputType="phone"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="284dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutDataDeNascimento"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutCEP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutTelefone">

        <EditText
            android:id="@+id/dataDeNascimento"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="DD/MM/AAAA"
            android:inputType="date"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="235dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutEndereco"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/addFirebase"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutCEP">

        <EditText
            android:id="@+id/endereco"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Rua Exemplo, 123"
            android:inputType="textPersonName"
            android:textColorLink="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="396dp" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>