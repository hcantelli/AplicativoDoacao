<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/addFirebase"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:text="Finalizar Cadastro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endereco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/nomeUsuario"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Nome Completo"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/email" />

    <EditText
        android:id="@+id/dataDeNascimento"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="DD/MM/AAAA"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/telefone"
        app:layout_constraintTop_toBottomOf="@+id/cpf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/telefone"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="(12) 91234-5678"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/cep"
        app:layout_constraintTop_toBottomOf="@+id/dataDeNascimento"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/endereco"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Rua Exemplo, 123"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addFirebase"
        app:layout_constraintTop_toBottomOf="@+id/cep"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/cep"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="01234-567"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/endereco"
        app:layout_constraintTop_toBottomOf="@+id/telefone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/cpf"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="123.456.789-01"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/dataDeNascimento"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/cpf"
        app:layout_constraintTop_toBottomOf="@+id/nomeUsuario"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>